  <div class= 'row' >
    <div class = 'col-md-6 col-md-offset-3'>
        <% @threads.each do |t| %>
            <div class = 'thread'>
            <h2><%= link_to t.title.titleize, forum_thread_path(t) %>
            <% if t.sticky? %>
            <span class='glyphicon glyphicon-pushpin'> </span>
            <% end %>
            </h2>
                <div class = 'date'>
                <%= t.created_at.strftime("%d %B %Y") %> oleh <%= t.user.name %>
                </div>
                    <div class = 'content'>
                    <%= truncate t.content, length: 150 %>
                    </div>
                        <div class= 'count'>
                        <%= t.forum_posts.count %> obrolan
                        </div>  
                        <div style= 'clear:both'> </div>
                    <div class= 'action'>
                <%= link_to "Pin It",pinit_forum_thread_path(t), class: 'btn', method: :put %>    
                    </div>        
            </div>
                
        <% end %>
        <%= will_paginate @threads, renderer: BootstrapPagination::Rails %>
    </div>
  </div>